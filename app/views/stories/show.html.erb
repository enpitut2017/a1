<p id="notice"><%= notice %></p>

<h1>体験談詳細</h1>




<table class="table table-bordered">
  <col width="30%">
  <col width="15%">
  <col width="35%">

    <% cat_id = @story.category_id %>
    <% cls = "cat_bg" + cat_id.to_s %>
  <tr class="<%= cls %>">
    <th colspan="4">
      <div class="title_text"><%= @story.title %></div>
    </th>
  </tr>

  <tr>
    <td rowspan="4" class="centering_icon">
      <%= image_tag 'man_icon.png', :size => '80x80' %><br />
      <%= @story.name %> さん<br />
        （<%= link_to @story.department.name, stories_path+'/?department_select='+@story.department.id.to_s, :class => 'textlink' %>）
      </td>
    <th>カテゴリ</th>
    <td><%= link_to @story.category.name, stories_path+'/?category_select='+@story.category.id.to_s, :class => 'textlink' %></td>
    <td rowspan="4" style="text-align: center;">
      <%= link_to "いいね", story_like_path(@story), method: :patch, remote: true, :class => 'btn btn-danger' %>
      <%
        if @story.like_count.nil?
          like_c = 0
        else
          like_c = @story.like_count
        end
      %>
      <%= like_c %>
    </td>
  </tr>
  <tr>
    <th>企業名</th>
    <td><%= @story.company %></td>
  </tr>
  <tr>
    <th>時期</th>
    <td>大学<%= @story.year %>年<%= @story.month %>月</td>
</tr>
  <tr>
    <th>投稿日</th>
    <td><%= @story.created_at.to_s.split(" ")[0] %></td>
  </tr>
  <tr>
    <td colspan="4"><div class="content_pad"><%= simple_format(@story.content) %></div></td>
  </tr>
</table>



